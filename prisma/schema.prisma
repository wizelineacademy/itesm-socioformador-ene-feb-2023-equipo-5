// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String @id @default(uuid())
  name         String
  email        String
  password     String
  englishlevel Int
  summary      String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Test {
  id           String @id @default(uuid())
  videoURL     String
  result       String
  feedaback    String
  englishlevel String
  resources    String
  userId       String @relation()

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Comments {
  id       String  @id @default(uuid())
  comment  String
  modified Boolean

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Teacher {
  id       String @id @default(uuid())
  name     String
  email    String
  password String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Question {
  id        String @id @default(uuid())
  situation String
  level     Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
